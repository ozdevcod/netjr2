@page
@model global::Books.web.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Books";
}

<h2>Books</h2>

<a class="btn btn-primary btn-sm" href="/Books/Create">Create Book</a>

<table class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>author</th>
            <th>pages</th>
            <th>genre</th>
            <th>year</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.booksList)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.author</td>
                <td>@item.pages</td>
                <td>@item.genre</td>
                <td>@item.year</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Books/Update?id=@item.id">Update</a>
                    <a class="btn btn-danger btn-sm" href="/Books/Delete?id=@item.id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table> 
               