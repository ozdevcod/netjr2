@page
@model global::Books.web.Pages.Books.CreateModel
@{
}

<h2>Create Book</h2>

<form method="post">

    @if (@Model.errorMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-warning alert-dismissible fade show" role="alert">

                    <strong>@Model.errorMessage</strong>
                    @*<button type="button" class="btn-close" aria-label="Close"></button>*@
                </div>
            </div>
        </div>
    }
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.book.name" />
        </div>
    </div>

     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">author</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="author" value="@Model.book.author" />
        </div>
    </div>

     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Pages</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="pages" value="@Model.book.pages" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Genre</label>
        <div class="col-sm-6">
            <select name="genre" class="form-control" asp-for="@Model.book.genre">
                <option value="">genre</option>
                <option value="Technology">Technology</option>
                <option value="Novel">Novel</option>
                <option value="Science Fiction">Science Fiction</option>
                <option value="Mystery">Mystery</option>
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Year</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="year" value="@Model.book.year" />
        </div>
    </div>

    @if (@Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">

                    <strong>@Model.successMessage</strong>

                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>

        <div class="col-sm-3">
            <a class="btn btn-outline-primary" href="/Books/Index" role="button">Back</a>
        </div>

    </div>

</form>
